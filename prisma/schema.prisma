// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  email        String    @unique
  name         String?
  password     String?   // For credentials provider
  image        String?
  emailVerified DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  accounts     Account[]
  sessions     Session[]
  ratings      Rating[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Movie {
  id              String   @id @default(cuid())
  title           String
  releaseDate     DateTime?
  director        String?
  description     String?  @db.Text
  posterUrl       String?
  imdbId          String?  @unique
  tmdbId          Int?     @unique
  genres          String[]
  cast            String[] // Array of actor names
  runtime         Int?     // in minutes
  scrapedAt       DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  ratings         Rating[]
  
  @@index([title])
  @@index([releaseDate])
}

model Rating {
  id                String   @id @default(cuid())
  userId            String
  movieId           String
  diversityScore    Float    // 1-5 rating for diversity
  inclusionScore    Float    // 1-5 rating for inclusion
  overallScore      Float    // Calculated average
  comment           String?  @db.Text
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  movie             Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)
  
  @@unique([userId, movieId]) // One rating per user per movie
  @@index([movieId])
  @@index([userId])
}
